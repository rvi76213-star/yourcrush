#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
ğŸ“ Create all required directories
"""

import os

# Directories to create
directories = [
    "temp/cache/",
    "temp/downloads/", 
    "temp/uploads/",
    "examples/sample_commands/",
    "examples/sample_responses/",
    "examples/sample_configs/",
    "examples/sample_photos/"
]

def create_directories():
    """Create all required directories"""
    print("ğŸ“ Creating directories...")
    
    for directory in directories:
        try:
            os.makedirs(directory, exist_ok=True)
            print(f"âœ… Created: {directory}")
        except Exception as e:
            print(f"âŒ Error creating {directory}: {e}")
    
    print("âœ… All directories created successfully!")

if __name__ == "__main__":
    create_directories()