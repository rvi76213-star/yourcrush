{
    "enabled": true,
    "default_provider": "gemini",
    "fallback_provider": "deepseek",
    "cache_enabled": true,
    "cache_duration": 3600,
    "max_tokens": 1000,
    "temperature": 0.7,
    "providers": {
        "openai": {
            "enabled": true,
            "api_key": "your-openai-api-key-here",
            "model": "gpt-3.5-turbo",
            "max_tokens": 1000,
            "temperature": 0.7,
            "timeout": 30
        },
        "gemini": {
            "enabled": true,
            "api_key": "your-gemini-api-key-here",
            "model": "gemini-pro",
            "max_output_tokens": 1000,
            "temperature": 0.7,
            "timeout": 30
        },
        "deepseek": {
            "enabled": true,
            "api_key": "your-deepseek-api-key-here",
            "model": "deepseek-chat",
            "max_tokens": 2000,
            "temperature": 0.7,
            "timeout": 30
        }
    },
    "prompt_templates": {
        "general": "You are YOUR CRUSH AI BOT. Respond in a friendly, romantic way. User language: {language}. Context: {context}. User said: {query}",
        "romantic": "Write a romantic message about: {topic}. Make it sweet and emotional.",
        "question": "Answer this question helpfully: {question}",
        "translation": "Translate from {source_lang} to {target_lang}: {text}"
    },
    "restrictions": {
        "blocked_topics": ["violence", "hate speech", "adult content", "self-harm"],
        "max_requests_per_minute": 10,
        "daily_limit": 100
    }
}